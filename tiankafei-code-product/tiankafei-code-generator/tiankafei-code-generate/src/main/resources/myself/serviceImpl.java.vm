    /**
     * 获取 $!{table.comment} 分页对象列表
     *
     * @param ${cfg.pageParamConstName}
     * @return
     * @throws Exception
     */
	@Override
    public Paging<${entity}> get${table.serviceName}PageList(${cfg.pageParamClassName} ${cfg.pageParamConstName}) throws Exception {
		Page page = setPageParam(${cfg.pageParamConstName}, OrderItem.desc("create_time"));
		// 分页查询先查询主键id
		LambdaQueryWrapper<${entity}> lambdaQueryWrapper = new LambdaQueryWrapper();
		lambdaQueryWrapper.select(${entity}::getId);
		IPage<${entity}> iPage = super.page(page, lambdaQueryWrapper);
		List<${cfg.keyColumnType}> idList = iPage.getRecords().stream().map(${cfg.entityConstName} -> ${cfg.entityConstName}.getId()).collect(Collectors.toList());

		// 再根据查到的主键id查询数据
		Paging<${entity}> paging = new Paging();
		paging.setTotal(iPage.getTotal());
		if (CollectionUtils.isNotEmpty(idList)) {
			lambdaQueryWrapper = new LambdaQueryWrapper();
			lambdaQueryWrapper.in(${entity}::getId, idList);
			List<${entity}> ${cfg.entityConstName}List = super.list(lambdaQueryWrapper);
			paging.setRecords(${cfg.entityConstName}List);
		}
		return paging;
	}

    /**
     * 计算 $!{table.comment} 总记录数
